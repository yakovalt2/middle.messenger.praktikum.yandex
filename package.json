{
  "name": "messenger",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --port 3000",
    "build": "vite build",
    "preview": "vite preview",
    "start": "vite build && vite preview --port 3000",
    "lint": "eslint 'src/**/*.{ts,js,tsx,jsx}'",
    "lint:styles": "stylelint '**/*.css' '**/*.scss'",
    "fix-newlines": "prettier --write \"**/*.{ts,js}\"",
    "prepare": "husky install",
    "test": "NODE_OPTIONS='--loader ./src/loaders/stub-loader.js --loader ts-node/esm' mocha --require ./src/loaders/setup.js"
  },
  "engines": {
    "node": ">=12"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.27.1",
    "@babel/register": "^7.27.1",
    "@eslint/js": "^9.17.0",
    "@types/chai": "^5.2.2",
    "@types/express": "^5.0.0",
    "@types/jsdom": "^21.1.7",
    "@types/jsdom-global": "^3.0.7",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.2",
    "@types/node-fetch": "^2.6.12",
    "@types/page": "^1.11.9",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@types/sinon": "^17.0.4",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "chai": "^5.2.0",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "jsdom-global": "^3.0.2",
    "lint-staged": "^16.0.0",
    "mocha": "^11.2.2",
    "sass": "^1.82.0",
    "sinon": "^20.0.0",
    "stylelint": "^16.12.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-scss": "^6.10.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^4.5.5",
    "vite-plugin-handlebars": "^2.0.0",
    "vite-plugin-string": "^1.2.3"
  },
  "dependencies": {
    "autoprefixer": "^10.4.20",
    "eslint-plugin-prettier": "^5.2.1",
    "express": "^4.21.2",
    "express-handlebars": "^8.0.1",
    "handlebars": "^4.7.8",
    "lodash-es": "^4.17.21",
    "node-fetch": "^2.7.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write",
      "npm run test"
    ]
  }
}
