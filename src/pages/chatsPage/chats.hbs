<main>
  <div class="container flex">
    <div class="sidebar">
      <div class="sidebar__header">
        <h2>Мои чаты</h2>
      </div>

      <div class="sidebar__logout">
        {{{logoutButton}}}
      </div>

      <div class="sidebar__create-chat">
        {{{createChatInput}}}
        {{{createChatButton}}}
      </div>

      <ul class="sidebar__chat-list flex-column">
        {{#each chats}}
          {{{this}}}
        {{/each}}
      </ul>
    </div>

    <div class="chat-area flex-column">
      <div class="chat-area__input flex">
        <div class="chat-area__input-field flex">
          {{{messageInput}}}
        </div>
        {{{sendButton}}}
      </div>
    </div>
  </div>
</main>